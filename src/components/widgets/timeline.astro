---
// components/ui/Timeline.astro
export interface ScheduleItem {
  time: string;
  event: string;
}

interface Props {
  items: ScheduleItem[];
}

const { items } = Astro.props;
---

<div class="space-y-4">
  {items.map(({ time, event }) => (
    <div class="flex">
      <div class="flex-shrink-0 w-24 text-sm font-medium text-gray-500">{time}</div>
      <div class="flex-grow pl-4 border-l border-gray-300">
        <p class="text-base font-medium">{event}</p>
      </div>
    </div>
  ))}
</div>