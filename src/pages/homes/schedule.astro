---
// widgets/Schedule.astro
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import Timeline from '~/components/ui/Timeline.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import ImportantDates from '~/components/ui/ImportantDates.astro';

const importantDates = [
  { date: 'November 2024', event: 'Submission Abstract' },
  { date: 'December 2024 - January 2025', event: 'Submission Full paper' },
  { date: 'February 2025', event: 'Last Date of Paper Submission' },
  { date: '1-2 March 2025', event: 'Conference Date' },
];

const scheduleDay1 = [
  { time: '09:00', event: 'Opening Speech' },
  { time: '10:00', event: 'Keynote Speaker 1' },
  { time: '11:30', event: 'Invited Speaker 2' },
  { time: '13:00', event: 'Panel Presentation 1' },
  { time: '14:30', event: 'Panel Presentation 2' },
  { time: '16:00', event: 'Panel Presentation 3' },
  { time: '17:30', event: 'Panel Presentation 4' },
  { time: '19:00', event: 'Panel Presentation 5' },
];

const scheduleDay2 = [
  { time: '09:00', event: 'Workshop' },
  { time: '11:00', event: 'First Keynote' },
  { time: '14:00', event: 'Invited Speaker' },
];
---

<WidgetWrapper>
  <Headline
    title="Conference Schedule"
    subtitle="Join us for two days of insightful presentations and engaging discussions"
  />

  <ImportantDates dates={importantDates} />

  <div class="mt-12">
    <h2 class="text-2xl font-bold mb-4">Day 1 - March 1, 2025</h2>
    <Timeline items={scheduleDay1} />
  </div>

  <div class="mt-12">
    <h2 class="text-2xl font-bold mb-4">Day 2 - March 2, 2025</h2>
    <Timeline items={scheduleDay2} />
  </div>

  <div class="mt-12">
    <h2 class="text-2xl font-bold mb-4">Keynote Speakers</h2>
    <ItemGrid
      items={[
        { title: 'First Keynote', description: 'Details about the first keynote speaker' },
        { title: 'Invited Speaker', description: 'Details about the invited speaker' },
      ]}
      columns={2}
    />
  </div>
</WidgetWrapper>